FROM python:3.10-slim-buster

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PORT=8000

WORKDIR /app

COPY requirements-barebones.txt ./requirements.txt
RUN pip install --no-cache-dir -r requirements.txt && \
    rm -rf /root/.cache

COPY ./app/main_barebones.py ./app/main.py

EXPOSE 8000

# Fixed CMD - uses shell form to expand $PORT
CMD exec uvicorn app.main:app --host 0.0.0.0 --port $PORT